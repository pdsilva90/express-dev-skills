<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/style.css" type="text/css">
    <title>My Developer Skills</title>
</head>
<body>
    <body>
      <a href="/">Home</a>
      | 
     <a href="/skills">All Skills</a>
     
        <h1>My Developer Skills</h1>
       
        <h3>Skills as of <%= time %></h3>
        <ul>
          <% skills.forEach(function(s) { %>
            <li>
              <form action="/skills/<%= s.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              </form>
                <a href="/skills/<%= s.id %>"><%= s.skill %></a>
                - 
              <%= s.mastered ? 'done!' : 'not quite' %>
            </li>
          <% }); %>
        </ul>
        <a href="/skills/new">Add Skill</a>
      </body>
    
</body>
</html>